{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "paths": {
      "@ss-dynamic-forms/*": [
        "../dist/@ss-dynamic-forms/*"
      ]
    },
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "hammerjs",
      "jasmine",
      "node",
      "protractor"
    ]
  },
  "exclude": [
    "aot",
    "dist",
    "main.aot.ngc.ts",
    "node_modules"
  ]
}