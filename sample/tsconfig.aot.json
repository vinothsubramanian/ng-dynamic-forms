{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "noImplicitAny": false,
    "outDir": "aot",
    "paths": {
      "@ss-dynamic-forms/*": [
        "../dist/@ss-dynamic-forms/*"
      ]
    },
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "hammerjs",
      "node",
      "q"
    ]
  }
}